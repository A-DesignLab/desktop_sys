<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_hr_payslip_tree2" model="ir.ui.view">
            <field name="name">hr.payslip.tree2</field>
            <field name="model">hr.payslip</field>
            <field name="arch" type="xml">
                <tree decoration-info="state in ('done')"
                      decoration-muted="state == 'cancel'" string="Payslips">
                    <field name="employee_id"/>
                    <field name="number"/>
                    <field name="name"/>
                    <field name="employee_department"/>
                    <field name="state"/>
                    <field name="remaining_gov_fees_awl"/>
                    <field name="remaining_substance_awl"/>
                    <field name="remaining_medical_alw"/>
                    <field name="remaining_travel_alw"/>
                    <field name="remaining_housing_alw"/>
                    <field name="remaining_salary"/>
                    <field name="remaining_total"/>
                </tree>
            </field>
        </record>
        <record id="view_hr_payslip_pivot2" model="ir.ui.view">
            <field name="name">hr.payslip.pivot</field>
            <field name="model">hr.payslip</field>
            <field name="arch" type="xml">
                <pivot>
                    <field name="employee_id"/>
                    <field name="number"/>
                    <field name="name"/>
                    <field name="employee_department" type="row"/>
                    <field name="state" type="col"/>
                    <field name="remaining_gov_fees_awl" type="measure"/>
                    <field name="remaining_substance_awl" type="measure"/>
                    <field name="remaining_medical_alw" type="measure"/>
                    <field name="remaining_travel_alw" type="measure"/>
                    <field name="remaining_housing_alw" type="measure"/>
                    <field name="remaining_salary" type="measure"/>
                    <field name="remaining_total" type="measure"/>
                </pivot>
            </field>
        </record>
        <record id="view_hr_payslip_search2" model="ir.ui.view">
            <field name="name">hr.payslip.search2</field>
            <field name="model">hr.payslip</field>
            <field name="arch" type="xml">
                <search>
                    <field name="employee_id"/>
                    <field name="number"/>
                    <field name="name"/>
                    <filter string="Draft" name="draft_state" domain="[('state', '=', 'draft')]"/>
                    <filter string="Admin Approve" name="admin_approve_state"
                            domain="[('state', '=', 'first_approve')]"/>
                    <filter string="Super Approve" name="super_approve_state"
                            domain="[('state', '=', 'second_approve')]"/>
                    <filter string="Waiting" name="waiting_state" domain="[('state', '=', 'verify')]"/>
                    <filter string="Done" name="done_state" domain="[('state', '=', 'done')]"/>
                    <filter string="Rejected" name="rejected_state" domain="[('state', '=', 'cancel')]"/>
                    <group expand="0" string="Group By">
                        <filter string="Department" name="employee_department"
                                context="{'group_by':'employee_department'}"/>
                        <filter string="Status" name="state" context="{'group_by':'state'}"/>
                        <filter string="Employee" name="state" context="{'group_by':'employee_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        <record id="hr_payslip_view_kanban2" model="ir.ui.view">
            <field name="name">hr.payslip.kanban2</field>
            <field name="model">hr.payslip</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state">
                    <field name="name"/>
                    <field name="state"/>
                    <field name="employee_department"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_content oe_kanban_global_click">
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <record id="action_view_annual_remaining_form" model="ir.actions.act_window">
            <field name="name">Annual Remaining</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.payslip</field>
            <field name="view_mode">tree,kanban,pivot</field>
            <field name="view_id" ref="view_hr_payslip_tree2"/>
        </record>

    </data>
</odoo>