<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_employee_form_inherit_ext_hr_contract" model="ir.ui.view">
        <field name="name">hr.employee.ext.hr.contract</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr_contract.hr_hr_employee_view_form2"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_open_contract_history']" position="attributes">
                <attribute name="attrs">{'invisible' : [('employee_type', 'not in', ['employee', 'student', 'trainee', 'worker'])]}</attribute>
            </xpath>
        </field>
    </record>
</odoo>
