<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <data>
        <record id="hr_contract_view_form" model="ir.ui.view">
            <field name="name">hr.contract.form</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@class= 'o_row mw-50']" position="after">
                    <label for="gov_fees"/>
                    <div class="o_row mw-50" name="gov_fees">
                        <field name="gov_fees" class="oe_inline o_hr_narrow_field" nolabel="1"/>
                        <div class="mb-3">/ month</div>
                    </div>
                    <label for="insurance"/>
                    <div class="o_row mw-50" name="insurance">
                        <field name="insurance" class="oe_inline o_hr_narrow_field" nolabel="1"/>
                        <div class="mb-3">/ month</div>
                    </div>
                </xpath>
                <xpath expr="//group[@name= 'salary']" position="after">
                    <group name="salary_right">
                        <label for="transport"/>
                        <div class="o_row mw-50" name="transport">
                            <field name="transport" class="oe_inline o_hr_narrow_field" nolabel="1"/>
                            <div class="mb-3">/ month</div>
                        </div>
                        <label for="housing"/>
                        <div class="o_row mw-50" name="housing">
                            <field name="housing" class="oe_inline o_hr_narrow_field" nolabel="1"/>
                            <div class="mb-3">/ month</div>
                        </div>
                        <label for="substance"/>
                        <div class="o_row mw-50" name="substance">
                            <field name="substance" class="oe_inline o_hr_narrow_field" nolabel="1"/>
                            <div class="mb-3">/ month</div>
                        </div>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>