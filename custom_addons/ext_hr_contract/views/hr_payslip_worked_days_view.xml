<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_payslip_worked_days_view_form_inherited" model="ir.ui.view">
        <field name="name">hr.payslip.worked_days.view.form.inherit</field>
        <field name="model">hr.payslip.worked_days</field>
        <field name="inherit_id" ref="hr_contract.hr_contract_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='salary_info']" position="after">
                <group name="hours_wage">
                    <label for="hourly_wage"/>
                    <div class="o_row mw-50" name="wage">
                        <field name="hourly_wage" class="oe_inline o_hr_narrow_field" nolabel="1"/>
                        <div class="mb-3">/ Hours</div>
                    </div>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
